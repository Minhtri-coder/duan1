<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bench"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Ghế dài"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/itemImageView"
        app:layout_constraintStart_toEndOf="@id/itemImageView"
        app:layout_constraintEnd_toStartOf="@id/itemPriceTextView"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/itemDetailsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="16dp"
        android:text="Qty:1"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/itemNameTextView"
        app:layout_constraintStart_toEndOf="@id/itemImageView"
        app:layout_constraintEnd_toStartOf="@id/itemPriceTextView"/>

    <TextView
        android:id="@+id/itemPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="20.000.000"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/itemImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/itemImageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>